%h1 Find a Work Order by ID (sent via email)

= form_tag "/work_order/", :id => "Search" do 
  
  Work Order Number (eg. HM-654321)
  %br
  = text_field :request_id, 'request_id'
  %br
  = submit_tag "Search"

%br
%h1 My Requests
%table{:class => "table table-hover"}
  %thead
    %tr
      - @headers.each do |header|
        %td
          %b= header
  %tbody
    - @requests.each do |request|
      %tr
        %td 
          - if (request.id.to_s == @sent_email.to_s)            
            Submit
          - else
            = link_to "Submit", "/requests/send_status_email/#{request.id}"
        %td= request.area
        %td= request.created_at.strftime("%b %d, %Y")
        %td= request.description
         
= button_to "Back to Home", '/requests', :class => "front_page_button", :method => :get, :id=>"home"
